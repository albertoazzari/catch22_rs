    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'catch22'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=catch22",
                    "--package=catch22"
                ],
                "filter": {
                    "name": "catch22",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RAYON_NUM_THREADS": "1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'catch22'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=catch22",
                    "--package=catch22"
                ],
                "filter": {
                    "name": "catch22",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RAYON_NUM_THREADS": "1"
            }
        }
    ]
}